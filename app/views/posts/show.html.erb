<%= form_for @post, url: post_path do |f| %>

  <p>
    <%= f.label :name%>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :content  %>
    <%= f.text_area :content %>
  </p>

   <p>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    </p>

   <%= f.hidden_field :user_id %>

  <%= f.submit "Update Post" %>


<% end %>


